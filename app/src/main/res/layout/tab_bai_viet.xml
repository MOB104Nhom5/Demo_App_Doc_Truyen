<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_1"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.237">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/boder_2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"

                android:backgroundTint="@color/white">

                <ImageView
                    android:id="@+id/imgBaiViet"
                    android:layout_marginBottom="20dp"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:padding="5dp"
                    android:src="@color/purple_200" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/itemTenTieuDe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/allerta"
                    android:text="Ten Tieu De "
                    android:textSize="18dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/itemTenNoiDung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/allerta"
                    android:text="Ten Noi dung"
                    android:textSize="16dp"
                     />
                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/txtLike"
                        android:layout_width="wrap_content"
                        android:text="100"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_marginLeft="2dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/baseline_like_up_24"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:id="@+id/txtXem"
                        android:layout_width="wrap_content"
                        android:text="300"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_marginLeft="2dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/baseline_remove_red_eye_24"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:layout_marginLeft="2dp"
                        android:id="@+id/txtBinhLuan"
                        android:layout_width="wrap_content"
                        android:text="200"
                        android:layout_gravity="bottom"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_marginLeft="2dp"
                        android:layout_width="wrap_content"
                        android:src="@drawable/baseline_chat_24"
                        android:layout_height="wrap_content">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>